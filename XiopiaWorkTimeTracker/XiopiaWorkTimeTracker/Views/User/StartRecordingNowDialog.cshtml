@using XiopiaWorkTimeTracker.Models
@using Ressources
@model UserViewModel

<div class="modal-body">
    <div class="alert alert-info">
        <span class="glyphicon glyphicon-calendar"></span>
        <table>
            <tr>
                <th>@Html.DisplayNameFor(m => m.WorkDay)</th>
                <th>@Html.DisplayNameFor(m => m.WorkStartTime)</th>
                <th>@Html.DisplayNameFor(m => m.Project)</th>
            </tr>
            <tr>
                @{
                    Model.WorkDay = DateTime.Now;
                    Model.WorkStartTime = DateTime.Now;
                }
                <td>@Html.Raw(Model.WorkDay.ToShortDateString())</td>
                <td>@Html.Raw(Model.WorkStartTime.ToShortTimeString())</td>
                <td>@Model.Project</td>
            </tr>
        </table>
    </div>
    @using (Html.BeginForm("SaveStartRecording", "User", FormMethod.Post))
    {
        <div class="row">
            &nbsp;
        </div>
        <div class="row">
            @*<div class="col-md-4 col-md-offset-4">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="submit" id="approve-btn" class="btn btn-primary">
                        Save
                    </button>
                </div>*@
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">@Language.Close</button>
            <button type="submit" class="btn btn-primary">@Language.SaveChanges</button>
        </div>
    }
</div>
<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
